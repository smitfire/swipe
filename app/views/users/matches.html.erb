<hr>
<div class="row">
    <div id="owl-demo" class="owl-carousel owl-theme">
        <% @user.matches.each do |book| %>
            <div class="item">
                <div class="col-sm-7">
                    <%= link_to image_tag(book.cover(:thumb)), book_path(book) %>
                </div>
                <div class="col-sm-5">
                    <h4><%= link_to book.title, book_path(book) %></h4>
                    <hr>
                    <blockquote >
                        <p><%= book.summary %></p>
                        <footer><cite title="Source Title"><%= book.author %> </cite></footer>
                    </blockquote>
                    <div class="clearfix"></div><hr>
                    <h5>Potential Trades <span class="pull-right"><%= @user.distance_to(book.location).round(1) %> miles</span></p>
                    <div class="clearfix"></div><hr>
                    <div id="owl-mini-demo">
                        <% book.owner.liked_books.where(owner: @user).each do |obk| %>
                            <div class="item"><%= link_to image_tag(obk.cover(:thumb)), book_path(obk), class: "img-thumbnail" %></div>
                        <% end -%>
                    </div>
                </div>
                    <div class="clearfix"></div><hr>
            </div>
        <% end -%>
    </div>
</div>
